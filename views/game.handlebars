<div class="container">
<div class="jumbotron bg-light" style="padding-top: 10px;">
    <h4 class="text-center">Match Up: <strong>{{user1}}</strong> vs <strong>{{user2}}</strong></h3>
     <h5>Progress</h5>
     <!-- shared box for Progress -->
    <div class="card-block col-md-6 offset-md-3" id="sharedWindow" style="padding-bottom: 10px;">
        
        <!-- USER 1 -->
        <p><strong>{{user1}}</strong></p>
        <div class="progress">
            <div id="progressBar1" class="progress-bar bg-success" 
                role="progressbar" aria-valuenow="0" 
                aria-valuemin="0" aria-valuemax="100" style="width:0%;">
    
            </div>
        </div>
        
        <!-- USER 2 -->
        <p><strong>{{user2}}</strong></p> 
        
        <div class="progress">
            <div id="progressBar2" class="progress-bar bg-primary" 
            role="progressbar" aria-valuenow="0" 
            aria-valuemin="0" aria-valuemax="100" style="width:0%">
            
            </div>
        </div>

    </div>
     <!-- individual box for card display and responses -->
    
    <div class="container text-center bg-faded">
        <p><strong>Subject: <span id="subject"></span></strong></p>
          <div id="card-holder" class="card-body">
             <p id="question"></p>
             <br>
             <div id="response">
                 <div class="input-div d-inline">
                     <input style="height:38px;font-size:14pt; vertical-align: bottom;" type="text" id="wordGuess" placeholder="Enter word...">
                 </div>
                 <div class="button-div d-inline">
                     <button type="button" class="btn btn-success" id="submitGuess">Enter</button>
                     <button type="button" class="btn btn-outline-danger" id="skipGuess">Skip</button>
                 </div>
             </div>
          </div>
          <p id="feedback"></p>
    </div>

 
</div>


